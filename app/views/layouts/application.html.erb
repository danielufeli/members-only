<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to 'Member Only', root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <%= link_to 'Home', root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
      <%= user_auth_menu('Edit Profile', edit_user_registration_path) %>
      </li>
      <li class="nav-item">
      <%= user_auth_menu('New Post', new_post_path) %>
      </li>
      <li class="nav-item">
      <%= auth_menu %>
      </li>
      <li class="nav-item">
      <%= sign_up_btn %>
      </li>
    </ul>
  </div>
</nav>
<div class="container">
<br />
    <div class="m-3">
      <h4 class="text-center"><%= notice %></h4>
      <h4 class="text-center"><%= alert %></h4>
    </div>
    <br />
    <%= yield %>
    </div>
  </body>
</html>
