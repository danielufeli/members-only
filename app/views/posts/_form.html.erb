<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
    <%= f.input :post, label: "Post your Thoughts", input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"}, placeholders: "Create a Post..." %>
  </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Create Post", class: "btn-primary" %>
  </div>
<% end %>